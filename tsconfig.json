{
  "compilerOptions": {
	  "target": "ES2018",
	  "jsx": "preserve",
	  "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ESNext",
      "DOM.Iterable",
      "WebWorker"
	  ],
	  "baseUrl": ".",
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "paths": {
      "@/*": [
		  "src/*"
      ]
	  },
	  "allowJs": true,
	  "strictNullChecks": true,
	  "noImplicitAny": true,
	  "importHelpers": true,
	  "inlineSourceMap": true,
	  "inlineSources": true,
	  "allowSyntheticDefaultImports": true,
	  "isolatedModules": true
  },
  "include": [
	  "src/**/*"
  ]
}
